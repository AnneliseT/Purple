<div class="budget">

    <main>
        <!--purchase input-->
        <section class="entry">
            <h5>add purchase</h5>
            Item name: <input id="item-name">
            Item value: <input id="item-value" type="numbers">
            Item Category:
            <select id="item-category">
                <option selected hidden>Select Category</option>
                <option value="Travel">Travel</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Food">Food</option>
                <option value="Extraordinary">Extraordinary</option>
                <option value="Education">Education</option>
                <option value="Other">Other</option>
            </select>
            <button>add</button>
        </section>
        <!--delete purchases-->
        <section class="item-controls">
            <button id="items-delete">Delete All</button>
        </section>
        <!--purchase output-->
        <section class="item-output"></section>
        <!--Total price of the current list of items-->
        <section class="total-price">
            <p id='totalPrice'></p>
        </section>
    </main>
    <button onclick="add()">Submit new items</button>
</div>
